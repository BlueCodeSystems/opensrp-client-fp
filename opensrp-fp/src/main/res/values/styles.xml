<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="FPAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FPAppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="FPAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FPAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="FPAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FPDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FPFullScreenDialog" parent="FPDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@color/primaryDark</item>
    </style>

    <style name="FPAppTheme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">@dimen/login_font_size</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="FPAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FPAppTheme.NoActionBar.NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
        <!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">70dp</item>
        <!-- item size in menu-->
    </style>

    <style name="Material.Drawable.RadioButton.AdvancedSearch" parent="Material.Drawable.RadioButton">
        <item name="rbd_width">18dp</item>
        <item name="rbd_height">18dp</item>
        <item name="rbd_strokeSize">2dp</item>
        <item name="rbd_radius">8dp</item>
        <item name="rbd_innerRadius">4dp</item>
        <item name="rbd_strokeColor">@drawable/advanced_search_rdb_stoke_color_list</item>
    </style>

    <style name="copy_clipboard_dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ActionBarNoShadow">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimary">@color/primary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--   <item name="android:windowEnterAnimation">@anim/slide_up</item>
           <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>

    <style name="save_button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
    </style>

    <style name="ProfileOverviewLabelStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/dark_silver</item>
        <item name="android:textSize">@dimen/profile_overview_text_size</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="ProfileOverviewTextStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/profile_overview_text_size</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
    </style>

    <style name="followupNotDue">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/spanish_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">@string/followup_date</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>

    <style name="followupDue">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_color_scooter</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/followup_due</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>

    <style name="followupOverdue">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/followup_overdue</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>

    <style name="visitNormalButton">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/spanish_grey</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">@string/followup_date</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>

    <style name="btnStartVisitDueStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_color_scooter</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>

    <style name="btnStartVisitOriginalDueStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>

    <style name="btnStartVisitStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_color_scooter</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingMultiplier">1.23</item>
    </style>


</resources>